	public ArrayList<String> showSuitableDriverData(String k) throws IOException {
		FileReader reader = new FileReader("/home/amr/Desktop/Bus Station/BusStation/showCurrentBuses.txt");
		BufferedReader buffer = new BufferedReader(reader);
		ArrayList <String> ArrayListData = new ArrayList<>();
		String filepath = "/home/amr/Desktop/Bus Station/BusStation/showCurrentBuses.txt";
		DefaultTableModel model = (DefaultTableModel) table.getModel();
		String firstLine = buffer.readLine().trim();
		String[] coloumnsName = firstLine.split(",");

		File file = new File(filepath);
		while (buffer.ready()) {
			String line = buffer.readLine();
			String[] tokens = line.split(" ");
			
			for (String token : tokens) {
				int i =0;
				if (token.trim().equals(k))
					{
						ArrayListData.add(line);
						model.setColumnIdentifiers(coloumnsName);
						Object[] tableLines = buffer.lines().toArray();
						String line1 = tableLines[i].toString().trim();
						String[] dataRow = line.split(" ");
						model.addRow(dataRow);
					}
			}
		}
		buffer.close();
		return ArrayListData;
	}
	
	
	
	
	
	
